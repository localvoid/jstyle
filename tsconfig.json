{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/js",
        "declaration": true,
        "declarationDir": "dist/typings",
        "inlineSourceMap": false,
        "inlineSources": false,
        "importHelpers": true,
        "noEmitHelpers": true,
        "removeComments": false,
        "lib": [
            "es6"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}